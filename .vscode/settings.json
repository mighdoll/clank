{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/*.log": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/.vitest": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/*.log": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/.vitest": true
  }
}
